<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="0.5dip" android:color="#BD1505" />
            <gradient android:angle="-90" android:startColor="#BD1505" android:endColor="#BD1505"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="0.5dip" android:color="#ff1919" />
            <solid android:color="#ff1919"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="0.5dip" android:color="#ff1919" />
            <gradient android:angle="-90" android:startColor="#ff1919" android:endColor="#ff1919" />
        </shape>
    </item>
</selector>